<% content_for :title, "Rubrics"%>
<p class="subtitle">
  <%= link_to "Create rubric", new_rubric_path %>
</p>

<table class="table is-striped is-hoverable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Cateogries</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @rubrics.each do |rubric| %>
      <tr>
        <td><%= rubric.name %></td>
        <td><%= rubric.categories_count %></td>
        <td colspan="3">
          <%= link_to rubric do %>
            <span class="icon"><i class="fas fa-eye"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
